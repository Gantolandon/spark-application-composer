{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "steps.json",
    "$ref": "#/definitions/steps",
    "definitions": {
        "steps": {
            "required": [
                "id",
                "displayName",
                "type"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "unique": true
                },
                "stepId": {
                    "type": "string"
                },
                "displayName": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "Pipeline",
                        "branch"
                    ]
                },
                "nextStepId": {
                    "type": "string"
                },
                "params": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "name",
                            "type",
                            "required"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "integer",
                                    "list",
                                    "boolean",
                                    "script",
                                    "string",
                                    "text",
                                    "result"
                                ]
                            },
                            "name": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean"
                            },
                            "default": {
                                "type": "string"
                            },
                            "value": {
                                "type": [
                                    "string",
                                    "boolean",
                                    "integer"
                                ]
                            }
                        }
                    }
                },
                "engineMeta": {
                    "type": "object"
                }
            }
        }
    }
}
