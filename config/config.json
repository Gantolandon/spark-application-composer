{
    "middleware": {
        "json": {
            "enabled": true,
            "priority": 30,
            "route": "/api*",
            "module": {
                "name": "body-parser",
                "method": "json",
                "arguments": [
                    {
                        "limit": "2mb"
                    }
                ]
            }
        },
        "static": {
            "module": {
                "arguments": [
                    "path:./public"
                ]
            }
        },
        "router": {
            "module": {
                "arguments": [
                    {
                        "directory": "path:./controllers"
                    }
                ]
            }
        },
        "appsec": {
            "priority": 110,
            "module": {
                "name": "lusca",
                "arguments": [
                    {
                        "csrf": false,
                        "xframe": "SAMEORIGIN",
                        "p3p": false,
                        "csp": false
                    }
                ]
            }
        }
    },
    "storage": {
        "type": "file"
    }
}
